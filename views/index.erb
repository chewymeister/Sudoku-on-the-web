<!-- "Hello Sudoku!" -->
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sudoku Online</title>
  <link rel="stylesheet" href="../css/application.css">
</head>
<body>
  <h1>Life is too short for playing Sudoku</h1>
  
  <div id="sudoku">
    <form action="/" method="post">
      <% 3.times do |row| %>
        <div class="row">
          <% 3.times do |box| %>
            <div class="box">
              <% 3.times do |cell_row| %>
                <div class="cell-row">
                  <% 3.times do |cell| %>
                    <div class="cell">
                      <% cell_index = row * 27 + box * 3 + cell_row * 9 + cell %>
                      <% cell_value = cell_value(@current_solution[cell_index]) %>
                      <% colour_class = colour_class(@check_solution, @puzzle[cell_index], @current_solution[cell_index], @solution[cell_index]) %>
                      <input class="<%=colour_class %>" name="cell[]" type="text" maxlength="1" autocomplete="off" value=<%=cell_value %>>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    <button>Check Solution</button>
    </form>
    <form action="/reset" method="get">
      <button>Reset the Board</button>
    </form>
    <form action="/new_puzzle" method="get">
      <button>Generate New Puzzle</button>
    </form>
    <form action="/solution">
      <button>Give up? Click for solution</button>
    </form>
  </div>

</body>
</html>