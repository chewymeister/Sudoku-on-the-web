<!-- "Hello Sudoku!" -->
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sudoku Online</title>
  <link rel="stylesheet" href="../css/application.css">
</head>
<body>
  <h1>Life is too short for playing Sudoku</h1>
  
  <div id="sudoku">
    <% 3.times do |row| %>
      <div class="row">
        <% 3.times do |box| %>
          <div class="box">
            <% 3.times do |cell_row| %>
              <div class="cell-row">
                <% 3.times do |cell| %>
                  <div class="cell">
                    <% cell_index = row * 27 + box * 3 + cell_row * 9 + cell %>
                    <% cell_value = @current_solution[cell_index] %>
                    <% print cell_value %>
                    <input type="text" maxlength="1" autocomplete="off" value=<%=cell_value %>>
                  </div> 
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</body>
</html>